         <font>
            <Font name="AR JULIAN" size="36.0" />
         </font>
         <effect>
            <Lighting>
               <bumpInput>
                  <Shadow>
                     <input>
                        <InnerShadow>
                           <input>
                              <Glow level="0.58" />
                           </input>
                        </InnerShadow>
                     </input>
                  </Shadow>
               </bumpInput>
               <light>
                  <Light.Distant />
               </light>
            </Lighting>
         </effect>
      </Label>
      <TextArea fx:id="text" layoutX="148.0" layoutY="153.0" prefHeight="168.0" prefWidth="429.0" wrapText="true" />
