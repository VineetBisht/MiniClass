            <Lighting>
               <bumpInput>
                  <Shadow />
               </bumpInput>
               <light>
                  <Light.Distant />
               </light>
            </Lighting>
         </effect>
      </CheckBox>
      <ImageView fx:id="back" fitHeight="31.0" fitWidth="44.0" layoutX="14.0" layoutY="14.0" onMouseClicked="#backEventHandler" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../resources/back.png" />
         </image>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </ImageView>
      <Label layoutX="17.0" layoutY="153.0" prefHeight="36.0" prefWidth="107.0" text="Details :" textFill="#ab7b37">
         <font>
            <Font name="System Bold Italic" size="22.0" />
         </font>
         <effect>
            <Glow level="0.48" />
         </effect>
      </Label>
      <Label layoutX="17.0" layoutY="86.0" prefHeight="36.0" prefWidth="107.0" text="Question :" textFill="#ab7b37">
         <font>
            <Font name="System Bold Italic" size="22.0" />
         </font>
         <effect>
            <Glow level="0.48" />
         </effect>
      </Label>
      <TextField fx:id="ques" layoutX="148.0" layoutY="92.0" prefHeight="36.0" prefWidth="429.0" />
   </children>
